<h1>投稿を編集します</h1>

<%= form_with model: @post, html:{class: "form-container"} do |f| %>
<div class="form-input">
    <%= f.label  :title %><%= f.text_field :title %>
</div>
<div class="form-input">
    <%= f.label :content %><%= f.text_area :content %>
</div>
<div class="button-container">
    <%= f.submit "更新する", class: "link-button" %>
</div>

<% end %>